<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/animLinearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="edu.bu.metcs.graphicsexample.AnimationActivity">


        <ImageView
        android:id="@+id/chatimageview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/chatimages" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
                <ImageButton
                    android:id="@+id/addAnim"
                    android:adjustViewBounds="true"
                    android:scaleType="fitCenter"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:text="Add"
                    android:src="@drawable/transitionimage"
                    android:onClick="addAnimation"/>


                <Button
                    android:id="@+id/startAnim"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Start animation"
                    android:enabled="false"
                    android:visibility="invisible"
                    android:onClick="startAnimation"/>

                <Button
                    android:id="@+id/endAnim"
                    android:visibility="invisible"
                    android:enabled="false"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="End animation"
                    android:onClick="endAnimation"/>


        </LinearLayout>



</LinearLayout>
